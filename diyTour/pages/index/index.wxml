<!-- index.wxml -->
<view class="container" >
  <view class="greeting">
    <text class="userName">{{userInfo.nickName}},</text>
    <text>{{greet}}</text>
    </view>
    <view class="motto">
      <text>{{motto.detail}}</text>
      <text> ——{{motto.author}}</text>
      <text> {{motto.source}}</text>
    </view>
  <view class="hr"></view>
  <view class="weui-cells__title" >{{diyTitle}}</view>
  <view class="weui-cells weui-cells_after-title" >
    <navigator class=" weui-cell weui-cell_access" url=" " hover-class="   weui-cell_active" >
      <view class=" weui-cell__hd" >
        <image src="data:image/png;base64," 
        style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd" >出发地</view>
      <view class="weui-cell__ft weui-cell__ft_in-access" >北京</view>
    </navigator>
    <navigator class="weui-cell weui-cell_access" url=" " hover-class="   weui-cell_active" >
      <view class=" weui-cell__hd" >
        <image src="data:image/png;base64," 
        style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd" >目的地</view>
      <view class="weui-cell__ft weui-cell__ft_in-access" >广州</view>
    </navigator>
  </view>
</view>
