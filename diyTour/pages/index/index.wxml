<!-- index.wxml -->
<view class="container" >


<view class="header">
<!--Header greeting-->
  <view class="greeting">
    <text class="userName">{{userInfo.nickName}} ~</text>
    <text class="greet">{{greet}}</text>
  </view>

  <view class="motto">
      <text>{{motto.detail}}</text>
      <text> ——{{motto.author}}</text>
      <text> {{motto.source}}</text>
  </view>

</view> 

<!--选择私人订制出发地，目的地-->
  <view class="weui-cells__title" >{{diyTitle}}</view>

  <view class="weui-cells weui-cells_after-title" >

    <navigator class=" weui-cell weui-cell_access" url=" " hover-class="weui-cell_active" >
     
      <view class=" weui-cell__hd" >
        <image src="data:image/png;base64," 
        style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>

      <view class="weui-cell__bd" >出发地</view>

      <view class="weui-cell__ft weui-cell__ft_in-access" >北京</view>

    </navigator>

    <navigator class="weui-cell weui-cell_access" url=" " hover-class="   weui-cell_active" >
     
      <view class=" weui-cell__hd" >
        <image src="data:image/png;base64," 
        style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>

      <view class="weui-cell__bd" >目的地</view>

      <view class="weui-cell__ft weui-cell__ft_in-access" >广州</view>

    </navigator>

      <!--出发时间picker-->
    <view class=" weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="bindanglechange" style="">
     
        <view class=" weui-cell__hd" >
          <image src="data:image/png;base64," 
          style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>

        <view class="weui-cell__bd" >出发日期</view>

        <view class="weui-cell__ft ft" >最早 {{date}}

        <text class="angelNext" 
        style=" -webkit-transform: rotate({{angle}}deg);transform: rotate({{angle}}deg);"
        ></text>
        
        </view>

    </view>

  </view>


